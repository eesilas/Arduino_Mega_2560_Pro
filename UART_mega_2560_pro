void setup() {
  Serial.begin(9600);   // UART0 (USB)
  Serial1.begin(9600);  // UART1 (Pins 18 & 19)
  Serial2.begin(9600);  // UART2 (Pins 16 & 17)
  Serial3.begin(9600);  // UART3 (Pins 14 & 15)
}

void loop() {
  if (Serial.available()) {
    char data = Serial.read();
    Serial1.write(data);  // Echo to UART1
  }
}
